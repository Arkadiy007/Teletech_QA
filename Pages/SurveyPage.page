        <a href="" class="right btn" onClick="$('.close').click(); return false;">Cancel</a>
        
        <!-- <apex:form >
         <apex:commandButton action="{!updateUrl}" value="Update URL Link"/>
        </apex:form> -->

     </div>
     </div>
  </apex:pageBlock>
 

