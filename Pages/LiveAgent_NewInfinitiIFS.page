        <apex:outputPanel id="opSuccess">
            <script>
                if ({!isSuccess}) {
                    switch('{!chatButtonPressed}') {
                        case 'button1':
                            liveagent.startChatWithWindow('{!buttonId}', window.name);
                            break;
                        case 'button2':
                            liveagent.startChatWithWindow('{!infinitiButtonId2}', window.name);
                            break;
                        case 'button3':
                            liveagent.startChatWithWindow('{!infinitiButtonId3}', window.name);
                            break;
                        case '{!$Label.LiveAgent_NewInfiniti_RadioButton4_Value}':
                            var liveAgentLink = getSiteURL();
                            document.location.href = liveAgentLink + "livechat/LiveAgent_NewInfiniti_IFS" + "?routingGroup=" + "{!$Label.LiveAgent_NewInfiniti_RadioButton4_Value}";
                            break;
                    }
                }

                function getSiteURL() {
                    var url = "{!$Label.LiveAgent_SiteURL}";
                    if (!strEndsWith(url,'/')) {
                        url = url +'/';
                    }
                    return url;
                } 
                
                function strEndsWith(str, suffix) {
                    return str.match(suffix+"$")==suffix;
                }
            </script>
